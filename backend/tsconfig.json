{
  "compilerOptions": {
    "outDir": "out",
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "@types/jest"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts", "lib/**/*.ts", "bin/**/*.ts"],
  "exclude": ["node_modules", "out", "cdk.out"]
}
